<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity" tools:ignore="MissingDefaultResource">

    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:id="@+id/cancel_button"/>

    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:id="@+id/submit_button"/>

    <EditText
            android:hint="Please input your title (up to 20 words)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_button"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/header_title"/>

    <TextView
            android:id="@+id/idTVCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

    <EditText
            android:hint="Author Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/author"/>





    <ImageView
            android:id="@+id/picture"
            android:layout_below="@+id/idTVCurrent"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/upload"
            android:layout_width="350dip"
            android:layout_height="200dip"
            android:layout_alignParentLeft="true"/>


    <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please input your article"
            android:inputType="textMultiLine"
            android:layout_below="@+id/picture"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="start|top"
            android:id="@+id/mainBody"/>


</RelativeLayout>